.container{
  background: #f7f7f7;
}

/* 顶部导航  */

.home .cet-logo {
  width: 180rpx;
  height: 180rpx;
  opacity: .9;
  margin: 100rpx 0 30rpx;
}

.header {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom:60rpx;
}
.active .header{
  position: fixed;
  top: 0;
  left: 0;
  min-height: 85rpx;
  background-color: #fff;
  margin-bottom:60rpx;
}
.active .ts-logo{
  display: none;
}




/* 表单  */


.input-label {
  height: 20rpx;
  line-height: 20rpx;
  padding-left:20rpx;
  color: #ccc;
  /* border-right: 1px solid #d8d8d8; */
  min-width: 100rpx;
  font-size: 10pt;

}
.input-group input {
  /* padding: 0 20rpx; */
  flex: 1;
  min-height: 52rpx;
  height: 52rpx;
  line-height: 52rpx;
}

.input-group {
  display: flex;
  align-items: center;
  margin:0 60rpx;
  background: #fff;
  /* border: 2px solid #f4f4f4; */
  box-shadow:5rpx 5rpx 15rpx #e2e2e2;
  height:75rpx;
  transition:all .15s ease-in-out;


}
.input-group.active {
  border: 2px solid #73b4ef;
}

.left{
  float: left;
}
.right{
  float: right;
}

.btn{
  margin:auto;
  background:#73b4ef;
  width:500rpx;
  height:80rpx;
  line-height:60rpx;
  color:white;
  text-align:center;
  border-radius:100rpx;
  margin-top:120rpx;
  font-size:13pt;
  font-weight:bold;
  padding:12rpx 0;

}
.warn{
  color: red;
  margin-left: 80rpx;
  height: 40rpx;
  line-height: 40rpx;
}

/*  查询结果  */

.result{
  margin-left: 70rpx;
  margin-right: 70rpx;
  margin-top: 50rpx;

}
.result .examName{
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.result .name,
.result .idCard{
  color: #999;
}
.result .score{
  margin-top: 30rpx;
  background: #F2F2F2;
  padding:25rpx; 
}
.result .score{
  color: #999;
}
.result .score .total{
  font-size: 33rpx;
  color: #333;
}
.result .score .scoreList{
  margin-left: 50rpx;
  margin-top: 20rpx;
}



.help {
  position: absolute;
  z-index: 100;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.box {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  width: 80%;
  background: #fff;
  border-radius: 10px;
  box-shadow: 0 0 50px rgba(22,22,22,.35);
}
.box-hd {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  border-bottom: 1px solid #eee;
}
.box-title {
  font-size: 13pt;
}
.box-close {
  position: absolute;
  right: 20rpx;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx;
}
.box-bd {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 15rpx 40rpx 30rpx;
}
