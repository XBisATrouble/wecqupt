<view class="container home">
  <view class="header"><!-- 顶部导航栏  -->
    <image class="cet-logo" src="/images/core/cet.png"></image>
  </view>
  
  <view><!-- 成绩查询 预约  -->
    <form bindsubmit="submitForm">
    <view class="input-group {{name_focus ? 'active' : ''}}">
      <text class="input-label">姓名：</text>
      <input id="name" name="name" data-name="name" confirm-type ="next" type="text" cursor-spacing="30" bindinput="checkInput" bindfocus="inputFocus" bindblur="inputBlur" />
    </view>

    <view class="warn">{{nameWarn}}</view>
    <view class="input-group {{idCard_focus ? 'active' : ''}}">
      <text class="input-label">准考证：</text>
      <input id="idCard" name="idCard" data-name="idCard" confirm-type ="done" type="number" cursor-spacing="30"  bindinput="checkInput" bindfocus="inputFocus" bindblur="inputBlur" />
    </view>
    <button class="btn" formType="submit">
      <view>{{curselected?'查询':'预约' }}</view>
    </button>
    </form>
  </view>
</view>